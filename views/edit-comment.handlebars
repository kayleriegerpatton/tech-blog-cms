<header>
    {{>private-navbar}}
</header>
<main>
    <h1 class="text-center my-4">Edit Your Comment</h1>
    <form class="w-75 mb-5 mx-auto mb-5 p-3 rounded" style="background-color: #fafafaa8;">
        <div class="mb-3">
          <input type="text" class="form-control" id="new-comment-field" value="{{comment.comment}}"/>
          <div id="comment-error" class="form-text text-danger">
            </div>
        </div>

        <button type="submit" name="edit-comment-btn" class="btn btn-danger" data-blog="{{comment.blog_id}}" id="{{comment.id}}">Save</button>

        <a href="/blogs/{{comment.blog_id}}" type="submit" name="discard-comment-changes-btn" class="btn btn-danger" id="{{comment.id}}">Discard</a>
      </form>
</main>
