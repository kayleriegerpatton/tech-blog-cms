<header>
  {{>private-navbar}}
</header>
<main>
  {{#if blogs}}
  <div class="d-flex justify-content-end mt-3">
    <a href="/create-blog" type="button" class="btn btn-danger mx-5" id="create-blog-btn">Create New Blog</a>
  </div>
  {{/if}}
  <h1 class="text-center mb-5 mt-3">My Blogs</h1>
  {{#if blogs}}
  {{#each blogs}}
  <div class="card mx-auto my-4 p-2" style="max-width: 50rem">
    <div class="card-body">
      <h4 class="card-title">{{title}}</h4>
      <h6 class="card-subtitle mb-2 mt-2 text-muted">Written {{formatDate createdAt}}</h6>
      <p class="card-text px-3"> {{content}}
      </p>
      <div class="d-flex justify-content-end">
        <button id={{id}} name="edit-blog-btn" class=" btn btn-danger mt-2 mx-1">Edit</button>
        <button name="delete-blog-btn" id={{id}} class="btn btn-danger mt-2 mx-1">Delete</button>
      </div>
    </div>
  </div>
  {{/each}}
  {{else}}
  <div class="d-flex justify-content-center mt-3">
    <a href="/create-blog" type="button" class="btn btn-danger mx-5" id="create-blog-btn">Create Your First Blog!</a>
  </div>
  {{/if}}
</main>
{{>footer}}

