<header>
  {{>public-navbar}}
</header>
<main>
    <h1 class="text-center my-4">Tech Talk</h1>
    {{#each blogs as |blog|}}
    <div class="card mx-auto my-4" style="max-width: 50rem">
        <div class="card-body">
          <h5 class="card-title">{{blog.title}}</h5>
          <h6 class="card-subtitle mb-2 mt-2 text-muted">By {{blog.user.username}} | {{blog.createdAtt}}</h6>
          <button class="btn btn-danger mt-2">Read</button>
        </div>
    </div>
    {{/each}}
</main>