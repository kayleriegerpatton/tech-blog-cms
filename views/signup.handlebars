<header>
  {{>public-navbar}}
</header>
<main>
    <h1 class="text-center my-4">Sign Up</h1>
        <form class="mx-5 w-50 mx-auto" id="signup-form">
            
            {{!-- EMAIL --}}
        <div class="mb-3">
            <label for="email" class="form-label">Email address <span class="text-danger">*</span></label>
            <input
            type="email"
            class="form-control"
            id="email"
            aria-describedby="emailHelp"
            />
            <div id="email-error" class="form-text text-danger">
            </div>
        </div>
        
        {{!-- USERNAME --}}
        <div class="mb-3">
            <label for="username" class="form-label">Username <span class="text-danger">*</span></label>
            <input
            type="input"
            class="form-control"
            id="username"
            aria-describedby="usernameHelp"
            />
            <div id="username-error" class="form-text text-danger">
            </div>
            <div id="usernameRequire" class="form-text">
            Must contain at least 8 alphanumeric characters.
            </div> 
            
        </div>
        
        {{!-- PASSWORD --}}
        <div class="mb-3">
            <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
            <input type="password" class="form-control" id="password" />
             <div id="password-error" class="form-text text-danger">
            </div>
            <div id="passwordRequire" class="form-text">
            Must contain 8-64 characters and contain letters, numbers, and special
            characters.
            </div> 
           
        </div>
        
        {{!-- CONFIRM PASSWORD --}}
        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm password <span class="text-danger">*</span></label>
            <input type="password" class="form-control" id="confirmPassword" />
            <div id="confirmPassword-error" class="form-text text-danger">
            </div>
        </div>
        <button type="submit" class="btn btn-danger">Create Account</button>
        </form>
</main>
{{>footer}}

